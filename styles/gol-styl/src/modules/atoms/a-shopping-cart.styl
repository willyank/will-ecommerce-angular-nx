.a-shopping-cart {
  margin-top: 0;
  margin-bottom: 0;
  color: $theme-main.color-3;
  display: flex;
  align-items: center;
  font-size: rem(15);
  outline: none;
  background: none;
  border: none;
  padding-left: 0;
  padding-right: 0;
  font-size: 0;

  &::after {
    font-size: rem(16);
    color: $theme-main.color-10;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: $theme-main.color-1;
    border-radius: 50%;
    height: rem(40);
    width: rem(40);
    line-height: 1;
    transition: background-color 0.2s ease;
  }

  &:hover::after {
    background-color: $theme-main.color-14;
  }
}
