.m-grid-button {
  display: grid;
  grid-gap: rem(24);
  grid-auto-flow: column;
  grid-auto-columns: 1fr;
  margin-top: rem(40);
  margin-bottom: rem(40);
}

.m-grid-button--just {
  grid-auto-columns: max-content;
  grid-gap: rem(16);
  margin-bottom: 0
}

@media only screen and (max-width: $media.xs) {
  .m-grid-button {
    grid-auto-flow: row;
  }

  .m-grid-button--just {
    grid-auto-columns: auto;
  }

  .m-grid-button--small {
    margin-bottom: 0;
  }
}
