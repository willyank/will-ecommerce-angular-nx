.t-vbiz-login__heading {
  margin-top: 0;
  margin-bottom: rem(32);
}

.t-vbiz-login__section {
  theme(background-color, $theme-main.color-5);
}

.t-vbiz-login__title {
  margin-top: 0;
  margin-bottom: 0;
}

.t-vbiz-login__input {
  display: block;
  margin-bottom: rem(24);
}

@media only screen and (max-width: $media.xs) {
  .t-vbiz-login__heading {
    margin-bottom: rem(16);
  }

  .t-vbiz-login__title {
    margin-bottom: rem(16);
  }
}
